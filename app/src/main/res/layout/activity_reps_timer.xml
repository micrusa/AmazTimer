<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RepsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RepsTimerActivity">

    <Button
        android:id="@+id/RepsEndSet"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:background="@drawable/circle_button"
        android:text="@string/finishset"
        app:layout_constraintEnd_toEndOf="@+id/RepsStatus"
        app:layout_constraintStart_toStartOf="@+id/RepsStatus"
        app:layout_constraintTop_toBottomOf="@+id/RepsStatus" />

    <TextView
        android:id="@+id/RepsTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nullinfo"
        android:textColor="@color/black"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RepsHR" />

    <TextView
        android:id="@+id/RepsHR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="72dp"
        android:drawableStart="@drawable/heartbeat"
        android:text="@string/nullinfo"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/RepsSets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:text="@string/nullinfo"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/RepsStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nullinfo"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/RepsTimer"
        app:layout_constraintStart_toStartOf="@+id/RepsTimer"
        app:layout_constraintTop_toBottomOf="@+id/RepsTimer" />

    <Button
        android:id="@+id/RepsCancel"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:background="@drawable/circle_button"
        android:text="@android:string/cancel"
        app:layout_constraintEnd_toEndOf="@+id/RepsEndSet"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="@+id/RepsEndSet"
        app:layout_constraintTop_toBottomOf="@+id/RepsEndSet" />
</androidx.constraintlayout.widget.ConstraintLayout>